<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Labelip" />

    <EditText
        android:id="@+id/input_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:inputType="none"
        android:text="@string/ip" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/but_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/input_mail"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/input_mail"
        android:onClick="onClick"
        android:text="get time"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/but_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but_time"
        android:layout_below="@+id/but_time"
        android:layout_marginTop="24dp"
        android:onClick="onClick"
        android:text="get adress"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/but_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but_address"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="57dp"
        android:onClick="onClick"
        android:text="EXIT"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txt_output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_mail"
        android:layout_below="@+id/but_address"
        android:layout_marginTop="145dp"
        android:ems="10"
        android:inputType="textMultiLine" />

</RelativeLayout>